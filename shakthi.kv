<PageLayouts>:
    cols:2
    rows:4
    ToggleButton:
        text:"Off"
        on_state:root.on_toggle_state(self)

    Button:
        text:"Click the button u pussy"
        on_press:root.on_presss()
        disabled: root.code
    Label:
        text: root.text_on
        font_name:"fonts/Lcd.ttf"
        font_size:"80dp"
        color:1,.5,1,1
    Slider:

        min:0
        max:200
        value:100
        on_value:root.get_slider_value(self)
        disabled:not switch1.active
    Label:
        text:root.slider_value
        font_name:"fonts/Lcd.ttf"
        font_size:"80dp"
    Switch:
        id:switch1
    AnchorLayout1:
        anchor_x:"center"
        anchor_y:"center"
        TextInput:
            text:"Type Here!!"
            size_hint:None,None
            height:"40dp"
            width:"200dp"
            multiline:False
            on_text_validate:root.on_text_enter(self)
    Label:
        text:root.message
